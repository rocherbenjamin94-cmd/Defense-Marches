# =============================================
# TenderSpotter - Environment Variables
# Copy to .env and fill in the values
# =============================================

# === Environment ===
NODE_ENV=production
TZ=Europe/Paris

# === Database (PostgreSQL) ===
DB_HOST=postgres
DB_PORT=5432
DB_USER=tenderspotter
DB_PASSWORD=CHANGE_ME_SECURE_PASSWORD
DB_NAME=tenderspotter
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# === Frontend (Next.js) ===
# URL de l'API backend (pour les appels cote client)
NEXT_PUBLIC_API_URL=https://api.tenderspotter.fr

# === Clerk Authentication ===
# Recuperer sur https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_XXXXXXXXXXXX
CLERK_SECRET_KEY=sk_test_XXXXXXXXXXXX

# === Backend (NestJS) ===
PORT=3001
CORS_ORIGIN=https://tenderspotter.fr,https://www.tenderspotter.fr

# === API Keys ===
# Anthropic Claude API pour analyse de documents
ANTHROPIC_API_KEY=sk-ant-XXXXXXXXXXXX

# Pappers API pour recherche entreprises
PAPPERS_API_TOKEN=XXXXXXXXXXXX

# === TED API (Python FastAPI) ===
TED_API_URL=https://api.ted.europa.eu/v3/notices/search
TED_DEFAULT_COUNTRY=FRA
API_HOST=0.0.0.0
API_PORT=8000

# === Scheduler (TED sync) ===
SYNC_ENABLED=true
SYNC_HOUR=2
SYNC_MINUTE=0

# === Logging ===
LOG_LEVEL=INFO
LOG_FORMAT=json

# === Cache TTL (seconds) ===
BOAMP_CACHE_TTL=7200      # 2 hours
PLACE_CACHE_TTL=604800    # 7 days
TED_CACHE_TTL=3600        # 1 hour
