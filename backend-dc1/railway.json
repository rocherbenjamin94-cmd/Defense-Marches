{
    "build": {
        "builder": "NIXPACKS",
        "buildCommand": "npm run build",
        "nixpacksPlan": {
            "phases": {
                "setup": {
                    "nixPkgs": [
                        "nodejs-20_x"
                    ]
                }
            }
        }
    },
    "deploy": {
        "startCommand": "npm run start:prod",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    }
}