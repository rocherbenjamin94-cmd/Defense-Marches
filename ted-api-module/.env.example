# ===========================================
# TED API Module - Configuration
# ===========================================
# Copiez ce fichier en .env et adaptez les valeurs

# ----- TED API -----
# URL de l'API TED (ne pas modifier sauf cas spécial)
TED_API_URL=https://api.ted.europa.eu/v3/notices/search

# Clé API TED (optionnel pour Search, requis pour CVS/Publication APIs)
# Générez votre clé sur https://developer.ted.europa.eu/
TED_API_KEY=

# Pays par défaut pour les recherches (code ISO)
TED_DEFAULT_COUNTRY=FRA

# Nombre de résultats par page (max 100)
TED_DEFAULT_LIMIT=100

# Timeout des requêtes en secondes
TED_REQUEST_TIMEOUT=30.0

# ----- Base de Données -----
# Chemin vers la base SQLite (partagée avec veille-boamp)
DATABASE_PATH=../veille-boamp/backend-dc1/data/cache.db

# ----- Cache -----
# Durée de vie du cache en secondes (défaut: 1 heure)
CACHE_TTL=3600

# URL Redis (optionnel - si non défini, utilise le cache mémoire)
# Format: redis://localhost:6379/0
# Ou Upstash: rediss://default:xxx@xxx.upstash.io:6379
REDIS_URL=

# ----- Synchronisation -----
# Activer la synchronisation automatique
SYNC_ENABLED=true

# Heure de synchronisation quotidienne (0-23)
SYNC_HOUR=2

# Minute de synchronisation (0-59)
SYNC_MINUTE=0

# ----- Serveur API -----
# Adresse d'écoute
API_HOST=0.0.0.0

# Port d'écoute
API_PORT=8000

# Mode rechargement automatique (développement)
API_RELOAD=false

# Origins CORS autorisées (format JSON)
# Exemple: ["http://localhost:3000","https://monsite.fr"]
CORS_ORIGINS=["*"]

# ----- Logging -----
# Niveau de log: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Format de log: console ou json (pour production)
LOG_FORMAT=console
